{
  "info": {
    "name": "TABEEB Blog System",
    "description": "Complete blog module endpoints for TABEEB healthcare platform",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5002",
      "type": "string"
    },
    {
      "key": "doctorToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "adminToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "blogId",
      "value": "",
      "type": "string"
    },
    {
      "key": "blogSlug",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Public Endpoints",
      "item": [
        {
          "name": "Get All Published Blogs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blogs/public?page=1&limit=10&sortBy=publishedAt&sortOrder=desc",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "public"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" },
                { "key": "sortBy", "value": "publishedAt" },
                { "key": "sortOrder", "value": "desc" },
                { "key": "authorType", "value": "DOCTOR", "disabled": true },
                { "key": "search", "value": "", "disabled": true },
                { "key": "tag", "value": "", "disabled": true }
              ]
            }
          }
        },
        {
          "name": "Get Featured Blogs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blogs/public/featured?limit=6",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "public", "featured"],
              "query": [{ "key": "limit", "value": "6" }]
            }
          }
        },
        {
          "name": "Get Recent Blogs",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blogs/public/recent?limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "public", "recent"],
              "query": [{ "key": "limit", "value": "10" }]
            }
          }
        },
        {
          "name": "Get Blog by Slug",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blogs/public/slug/{{blogSlug}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "public", "slug", "{{blogSlug}}"]
            }
          }
        },
        {
          "name": "Search Blogs",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"query\": \"diabetes\",\n  \"limit\": 20\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blogs/public/search",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "public", "search"]
            }
          }
        },
        {
          "name": "Get All Tags",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/blogs/public/tags",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "public", "tags"]
            }
          }
        }
      ]
    },
    {
      "name": "Doctor Endpoints",
      "item": [
        {
          "name": "Create Blog (Doctor)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{doctorToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Understanding Hypertension in 2026\",\n  \"contentHtml\": \"<h2>What is Hypertension?</h2><p>Hypertension, also known as high blood pressure, is a chronic condition that affects millions worldwide...</p><h3>Common Symptoms</h3><ul><li>Persistent headaches</li><li>Dizziness and lightheadedness</li><li>Chest pain or pressure</li><li>Shortness of breath</li></ul><h3>Prevention and Management</h3><p>Regular exercise, a balanced diet low in sodium, and stress management are key to preventing and managing hypertension...</p>\",\n  \"excerpt\": \"Learn about hypertension, its symptoms, causes, and modern treatment approaches in this comprehensive guide.\",\n  \"coverImageUrl\": \"https://res.cloudinary.com/tabeeb/image/upload/v123456/blogs/cover-hypertension.jpg\",\n  \"coverImagePublicId\": \"blogs/cover-hypertension\",\n  \"seoTitle\": \"Understanding Hypertension: Complete Guide 2026\",\n  \"seoDescription\": \"Comprehensive guide to hypertension including symptoms, causes, treatment, and prevention strategies.\",\n  \"authorType\": \"DOCTOR\",\n  \"doctorUid\": \"YOUR_DOCTOR_UID_HERE\",\n  \"tags\": [\"Cardiology\", \"Heart Health\", \"Hypertension\", \"Blood Pressure\"],\n  \"status\": \"PUBLISHED\",\n  \"isFeatured\": false\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blogs/create",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "create"]
            }
          }
        },
        {
          "name": "Create Blog as Draft",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{doctorToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Draft: Managing Diabetes\",\n  \"contentHtml\": \"<h2>Introduction</h2><p>This is a draft blog post about diabetes management...</p>\",\n  \"coverImageUrl\": \"https://res.cloudinary.com/tabeeb/image/upload/v123456/blogs/diabetes.jpg\",\n  \"authorType\": \"DOCTOR\",\n  \"doctorUid\": \"YOUR_DOCTOR_UID_HERE\",\n  \"tags\": [\"Diabetes\", \"Endocrinology\"],\n  \"status\": \"DRAFT\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blogs/create",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "create"]
            }
          }
        },
        {
          "name": "Get My Blogs",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{doctorToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/blogs/my-blogs?page=1&limit=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "my-blogs"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "10" },
                { "key": "status", "value": "PUBLISHED", "disabled": true }
              ]
            }
          }
        },
        {
          "name": "Update Blog",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{doctorToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated: Understanding Hypertension in 2026\",\n  \"contentHtml\": \"<h2>Updated Content</h2><p>New information about hypertension treatment...</p>\",\n  \"excerpt\": \"Updated excerpt with latest research findings...\",\n  \"tags\": [\"Cardiology\", \"Hypertension\", \"Prevention\", \"2026 Updates\"],\n  \"status\": \"PUBLISHED\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blogs/{{blogId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "{{blogId}}"]
            }
          }
        },
        {
          "name": "Publish Draft",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{doctorToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"status\": \"PUBLISHED\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blogs/{{blogId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "{{blogId}}"]
            }
          }
        },
        {
          "name": "Delete Blog",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{doctorToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/blogs/{{blogId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "{{blogId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Admin Endpoints",
      "item": [
        {
          "name": "Create External Blog",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Latest Medical Research from Harvard\",\n  \"contentHtml\": \"<h2>Groundbreaking Cancer Study</h2><p>Researchers at Harvard Medical School have discovered a novel approach to cancer immunotherapy...</p><h3>Key Findings</h3><ul><li>85% improvement in patient response rates</li><li>Reduced side effects compared to traditional treatments</li><li>Applicable across multiple cancer types</li></ul>\",\n  \"excerpt\": \"Harvard researchers make breakthrough discovery in cancer immunotherapy treatment with 85% improved response rates.\",\n  \"coverImageUrl\": \"https://res.cloudinary.com/tabeeb/image/upload/v123458/blogs/harvard-research.jpg\",\n  \"coverImagePublicId\": \"blogs/harvard-research\",\n  \"seoTitle\": \"Harvard Medical Research: Cancer Treatment Breakthrough\",\n  \"seoDescription\": \"New research from Harvard Medical School shows promising results in cancer immunotherapy treatment.\",\n  \"authorType\": \"EXTERNAL\",\n  \"externalAuthorName\": \"Dr. Emily Johnson\",\n  \"externalAuthorBio\": \"Dr. Emily Johnson is a Professor of Oncology at Harvard Medical School with over 20 years of experience in cancer research and immunotherapy.\",\n  \"authorImageUrl\": \"https://res.cloudinary.com/tabeeb/image/upload/v123459/authors/emily-johnson.jpg\",\n  \"authorImagePublicId\": \"authors/emily-johnson\",\n  \"externalSourceName\": \"Harvard Health Publishing\",\n  \"externalSourceUrl\": \"https://www.health.harvard.edu/original-article\",\n  \"canonicalUrl\": \"https://www.health.harvard.edu/blog/cancer-immunotherapy-breakthrough-2026\",\n  \"tags\": [\"Cancer\", \"Medical Research\", \"Harvard\", \"Oncology\", \"Immunotherapy\"],\n  \"status\": \"PUBLISHED\",\n  \"isFeatured\": true,\n  \"featuredOrder\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blogs/create",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "create"]
            }
          }
        },
        {
          "name": "Get All Blogs (Admin)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/blogs/admin/all?page=1&limit=20",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "admin", "all"],
              "query": [
                { "key": "page", "value": "1" },
                { "key": "limit", "value": "20" },
                { "key": "status", "value": "DRAFT", "disabled": true }
              ]
            }
          }
        },
        {
          "name": "Toggle Featured Status",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isFeatured\": true,\n  \"featuredOrder\": 1\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blogs/admin/{{blogId}}/feature",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "admin", "{{blogId}}", "feature"]
            }
          }
        },
        {
          "name": "Remove from Featured",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"isFeatured\": false,\n  \"featuredOrder\": null\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blogs/admin/{{blogId}}/feature",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "admin", "{{blogId}}", "feature"]
            }
          }
        },
        {
          "name": "Update Any Blog (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              },
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Admin Updated Title\",\n  \"isFeatured\": true,\n  \"status\": \"PUBLISHED\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/blogs/{{blogId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "{{blogId}}"]
            }
          }
        },
        {
          "name": "Delete Any Blog (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{adminToken}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/blogs/{{blogId}}",
              "host": ["{{baseUrl}}"],
              "path": ["api", "blogs", "{{blogId}}"]
            }
          }
        }
      ]
    }
  ]
}
