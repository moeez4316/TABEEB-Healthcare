// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  uid  String @id
  role String // 'doctor' or 'patient'

  doctor  Doctor?
  patient Patient?
}

model Doctor {
  uid            String   @id
  name           String
  email          String   @unique
  phone          String?
  specialization String
  qualification  String
  experience     Int?
  createdAt      DateTime @default(now())

  user User @relation(fields: [uid], references: [uid])

  verification Verification?
}

model Patient {
  uid            String   @id
  name           String
  email          String   @unique
  phone          String?
  dob            DateTime 
  gender         String
  medicalHistory String?
  createdAt      DateTime @default(now())

  user User @relation(fields: [uid], references: [uid])
}

model Verification {
  doctorUid      String   @id
  isVerified     Boolean  @default(false)
  cnic           String
  pmdcNumber     String
  certificate    String?

  doctor         Doctor         @relation(fields: [doctorUid], references: [uid])
}